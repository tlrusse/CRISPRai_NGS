name: Project Setup

on:
  push:
    branches:
      - main

jobs:
  create_directories:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      - name: Create notes directory
        run: |
          if [ ! -d "notes" ]; then
            mkdir notes
            echo "Created notes directory"
          else
            echo "Notes directory already exists"
          fi
      - name: Create code directory
        run: |
          if [ ! -d "code" ]; then
            mkdir code
            echo "Created code directory"
          else
            echo "Code directory already exists"
          fi
      - name: create setup.sh and notes.md
        run: |
          if [ ! -n "$(ls code)" ]; then
            .github/workflows/create_setup_and_notes_files.sh $(basename "${{ github.repository }}")
          fi
      - name: Commit changes
        run: |
          if [ -n "$(git status --porcelain)" ]; then
            git config --global user.email "actions@github.com"
            git config --global user.name "GitHub Actions"
            git add notes code
            git commit -m "Create notes and code directories if they don't exist"
            git push
          else
            echo "notes and code directories already exist"
          fi